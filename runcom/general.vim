

let leader=" "
let localleader=" "
filetype plugin indent on
colorscheme torte

syntax enable
set number
set wrap
set showcmd
set autoindent
set mouse=a
set encoding=utf-8
set completeopt=longest,menuone

set tabstop=4
set softtabstop=4
set shiftwidth=4
set expandtab

set hlsearch
exec "nohlsearch"
set incsearch
set ignorecase
set smartcase
